<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Circular logo container -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp">
        
        <!-- Circular background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_logo_background" />
        
        <!-- App logo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground"
             />
            
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Available"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.1"
        android:textSize="16sp"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_update_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A new version is available. Please update to continue using the app."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_force_update_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This update is required to continue using the app."
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Update Now"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_skip"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Skip for Now"
        android:textSize="16sp"
        android:backgroundTint="@color/light_gray"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</LinearLayout>
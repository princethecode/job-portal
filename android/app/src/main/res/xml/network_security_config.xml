<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system"/>
            <!-- Trust user-added certificate authorities -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">emps.co.in</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator -->
        <domain includeSubdomains="true">192.168.1.1</domain> <!-- Local network -->
    </domain-config>
    
    <!-- Debug configuration for development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config> 